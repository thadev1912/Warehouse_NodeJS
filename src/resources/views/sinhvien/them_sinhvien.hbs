
<div class="card mt-5">
      <div class="card-header bg-danger text-white">
<h3 class="font-weight-bold ">THÊM SINH VIÊN</h3>
      </div>
  <div class="card-body">
    
        <form action="/sinhvien/luu" method="post">  
        
       <div class="form-row"> <!--thuộc tính form-row nó giúp chia 2 cột trên 1 row của nó-->
                    <div class="col-6">
                        <label>MÃ SINH VIÊN</label>
                        <input name="txt_ma_sv" id="txt_ma_sv" class="form-control" type="text" value="">
                          
                    </div>
                   <div class="col-6">
                        <label>TÊN SINH VIÊN</label>
                        <input name="txt_ten_sv" id="txt_ten_sv" class="form-control" type="text" value="">
                       
                    </div>
                    </div>
                     <div class="form-row"> <!--thuộc tính form-row nó giúp chia 2 cột trên 1 row của nó-->
                    <div class="col-6">
                        <label>NGÀY SINH </label>
                        <input  name="txt_ngaysinh_sv" id="txt_ngaysinh_sv" class="form-control" type="date" value="">
                       
                    </div>
                    <div class="col-6">
                        <label>GIỚI TÍNH</label><br>
                        {{!-- <input name="txt_gioitinh_sv" id="txt_gioitinh_sv" class="form-control" type="text" value=""> --}}
                        <div class="mt-2">
                         <input type='radio' name="txt_gioitinh_sv"  value='1' />&nbsp;Nam
                         <input type='radio' name="txt_gioitinh_sv" value='0' />&nbsp; Nữ
                       </div>
                    </div>
</div>
<div class="form-row"> <!--thuộc tính form-row nó giúp chia 2 cột trên 1 row của nó-->
                    <div class="col-6">
                        <label>ĐỊA CHỈ </label>
                        <input  name="txt_diachi_sv" id="txt_diachi_sv" class="form-control" type="text" value="">
                       
                    </div>
                    <div class="col-6">
                        <label>SỐ ĐIỆN THOẠI</label>
                        <input name="txt_sdt_sv" id="txt_sdt_sv" class="form-control" type="text" value="">
                       
                    </div>
                    <div class="col-6">
                        <label>MÃ LỚP</label>                        
                          <select class="form-control" name="txt_malop" id="txt_malop">
                          <option value="">---Vui lòng chọn Lớp---</option>
                          {{#each ls_lop}}                       
                              <option value="{{this.ma_lop}}">{{this.ten_lop}} </option>                        
                                  {{/each}}
                        </select>
                       
                    </div>
</div>
<div class="card-header text-white">
                    <button id="submit-button" type="submit" class="btn btn-warning" name="action" value="CONFIRM"><i class="icon-save"></i>&nbsp&nbspLưu Lại&nbsp&nbsp</button>
                    <a href="/tintucdatxanh" class="btn btn-danger"><i class="icon-remove"></i>&nbsp&nbspVề Trang Chủ&nbsp&nbsp</a>
</div>
</form>

</div>
  
 
 